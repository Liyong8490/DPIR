{
  "name": "Denoise_DnCNN_DIV2K" ,
  "use_tb_logger": false,
  "model": "denoising_model",
  "gpu_ids": [0],

  "datasets_opt": {
    "train": {
      "name": "DIV2K",
      "mode": "label-noisy",
      "color": "y",
      "label_root": "./datasets/DIV2K800/DIV2K800_sub.lmdb",
      "noise_level": [5, 10, 15, 20, 25, 30, 35, 40, 45, 50],
      "use_shuffle": true,
      "n_workers": 0,
      "batch_size": 16,
      "im_size": 64,
      "use_flip": true,
      "use_rotate": true
    },
    "val": {
      "name": "Set12",
      "mode": "label-noisy",
      "color": "y",
      "label_root": "./datasets/val_set12/Set12",
      "noisy_root": "./datasets/val_set12/noisySet12_25",
      "noise_level": [25]
    }
  },

  "path_opt": {
    "root": "./",
    "pretrained_model": null
  },

  "network_opt": {
    "network_name": "DnCNN",
    "in_nc": 1,
    "out_nc": 1,
    "nf": 64
  },

  "train_opt": {
    "optimizer": "adam",
    "lr": 1e-4,
    "lr_scheme": "MultiStepLR",
    "lr_steps": [2e5, 4e5, 6e5, 8e5],
    "lr_gamma": 0.5,
    "weight_decay": 0,
    "criterion": "l1",
    "val_freq": 1e2,
    "manual_seed": 0,
    "max_iter": 1e6
  },

  "logger_opt": {
    "print_freq": 20,
    "save_ckpt_freq": 5e3
  }
}
